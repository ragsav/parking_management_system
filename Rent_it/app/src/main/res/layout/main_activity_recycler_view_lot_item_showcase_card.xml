<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/area_card"
    app:cardElevation="16dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="#00000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/area_card_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#00000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardElevation="-8dp"
                        android:layout_width="32dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="@color/White"
                        android:layout_gravity="right"
                        app:cardCornerRadius="16dp"
                        android:layout_height="32dp">
                        <ImageButton
                            android:id="@+id/info_ok"
                            android:background="#00000000"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/White"
                            android:src="@drawable/info"
                            android:layout_width="32dp"
                            android:layout_height="32dp">

                        </ImageButton>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:elevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/tertiary"
                android:id="@+id/area_card_shade"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp"
                    android:outlineAmbientShadowColor="@color/primary"
                    android:outlineSpotShadowColor="@color/primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/tertiary"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:paddingTop="8dp"
                                android:textSize="20dp"
                                android:textColor="@color/Black"
                                android:text="City mall"
                                android:id="@+id/lot_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:padding="8dp"
                            android:orientation="horizontal"
                            android:background="@drawable/open_close_time_bg"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/opening_time"
                                android:text="10am"
                                android:textColor="@color/primary"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView

                                android:text=" - "
                                android:textColor="@color/primary"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:id="@+id/closing_time"
                                android:text="8pm"
                                android:textColor="@color/primary"
                                android:textSize="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:background="#191C2C"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/area_name"
                            android:textColor="@color/tertiary"
                            android:textSize="16dp"
                            android:text="--"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/baloon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:textColor="@color/tertiary"
                            android:textSize="16dp"
                            android:text="  |  "
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/baloon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:id="@+id/city_name"
                            android:textColor="@color/tertiary"
                            android:textSize="16dp"
                            android:text="--"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/baloon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>



                </LinearLayout>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="0dp"
                    app:cardElevation="2dp"
                    android:outlineAmbientShadowColor="@color/primary"
                    android:outlineSpotShadowColor="@color/primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/tertiary"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/status_color"
                                app:cardBackgroundColor="@color/Green"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                app:cardCornerRadius="10dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp">

                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/status_text"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="8dp"
                                android:text="Reservations open"
                                android:textColor="@color/primary"
                                android:textSize="12dp"
                                android:textAllCaps="true"
                                android:layout_marginRight="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>


                        </LinearLayout>
                        <LinearLayout
                            android:padding="8dp"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/book"
                                android:backgroundTintMode="src_atop"
                                android:backgroundTint="@color/secondary"
                                android:text="Book!"
                                android:textColor="@color/tertiary"
                                android:textAllCaps="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </Button>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>