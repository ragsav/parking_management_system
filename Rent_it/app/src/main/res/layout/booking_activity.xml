<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BookingActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/topAppBar"
                android:elevation="16dp"
                app:navigationIcon="@drawable/back"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Select your time"
                app:titleTextColor="@color/tertiary"
                >

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <NumberPicker
                android:background="@color/tertiary"
                android:backgroundTintMode="src_atop"
                android:backgroundTint="@color/tertiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </NumberPicker>
            <LinearLayout
                android:layout_margin="16dp"
                android:padding="4dp"
                android:background="@drawable/booking_border"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/bought"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="Today" />

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/sold"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="Tomorrow" />


                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/vehicle1"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="MH26R2354" />

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/vehicle2"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="MH45H2329" />


                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/car"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="Car" />

                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/suv"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:text="SUV" />


                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.button.MaterialButton
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    app:backgroundTint="@color/secondary"
                    android:text="Book!"
                    android:padding="8dp"
                    android:textColor="@color/tertiary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.button.MaterialButton>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>